                                            @*<li><a class="view-more btn- btn-sm" href="#">View more</a></li>*@
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </li>
            }
            else if (list.Count > 0)
            {
                <li class="drop-down">
                    @*<a href="#"><i class="fa fa-cogs"></i> Flyout</a>*@
                    <a href="@url/@parentMenu.MenuItemSeo" style="color:#fefefe">@parentMenu.MenuItem</a>
                    <ul class="drop-down-ul animated fadeIn">
                        @foreach (var menu in list)
                        {
                            <li><a href="@url/@menu.MenuItemSeo">@menu.MenuItem</a></li>
                        }
                    </ul>
                </li>
            }
            else
            {
                <li>
                    @*<a href="#"><i class="fa fa-cogs"></i> Flyout</a>*@
                    <a href="@url/@parentMenu.MenuItemSeo" style="color:#fefefe">@parentMenu.MenuItem</a>
                </li>
            }

