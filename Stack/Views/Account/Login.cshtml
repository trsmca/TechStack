@model Stack.Models.AccountModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div role="contentinfo">
    <div class="container">
        <div class="row row-bottom-padded-md" style="margin: 0 auto">
            <div class="col-md-12 section-heading text-center">
                <h2 class="to-animate fadeInUp animated">Login</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 subtext">
                        <h3 class="to-animate fadeInUp animated"></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "sky-form", role = "form" }))
                {
                    <fieldset>
                        <table style="width: 100%; padding: 10px">
                            <tr>
                                <td class="col-md-8">
                                    <section>
                                        @Html.ValidationSummary(true)
                                    </section>
                                    <section>
                                        <label class="input">
                                            <i class="icon-append fa-user-circle"></i>
                                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email address", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                            <b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
                                        </label>
                                    </section>

                                    <section>
                                        <label class="input">
                                            <i class="icon-append fa-lock"></i>
                                            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Password)
                                            <b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
                                        </label>
                                    </section>
                                    <footer>
                                        <a>Forgot Password</a>
                                        <button type="submit" class="button">Login</button>
                                    </footer>
                                </td>
                                <td class="col-md-1">
                                    <div class="wrapper">
                                        <div class="line"></div>
                                        <div class="wordwrapper">
                                            <div class="word">or</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="col-md-3">
                                    @*<button type="submit" class="btn btn-default" id="Google" name="provider" value="Google" title="Log in using your Google account">Google</button>*@
                                    <a href="/Account/Facebook"> <img src="/images/facebook-login.png" style="width: 180px; height: 35px; cursor: pointer" /></a>
                                    <br /><br />
                                    <a href="/Account/ExternalLogin?provider=Google"><img src="data:image/png;base64," style="width: 180px; height: 35px" /></a>
                                </td>
                            </tr>
                        </table>

                    </fieldset>
                }
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</div>
